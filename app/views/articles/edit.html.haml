.article
  %ul.nav.nav-pills
    %li
      %a{role: "presentation", href: "/articles"}
        %span
          文章
.article{:align => "center"}
  = simple_form_for @article do |a|

    .field
      = a.input :title ,:label=>false
    .field
      = a.input :text_body, as: :text,:label=>false
    .field
      .upload-preview{align: "center"}
        = a.file_field :picture 
      #target{height: '300', width: '400'}
    .field
      = a.button :submit, "提交"